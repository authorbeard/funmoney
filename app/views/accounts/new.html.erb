<h1>Accounts#new</h1>

<%= form_for @account do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
    <div class="form-group row">
        <%= f.label :institution, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :institution, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
        <%= f.label 'Nickname', class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :open_bal, class: "col-sm-2 col-form-label" %>
      <div class="input-group col-sm-10">
        <div class="input-group-addon">$</div>
        <%= f.text_field :open_bal, class: 'form-control' %>
        <!-- <div class="input-group-addon">.00</div> -->
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :int_rate, class: "col-sm-2 col-form-label" %>
      <div class="input-group">
        <%= f.text_field :int_rate, class: 'form-control' %>
        <div class="input-group-addon">%</div>
      </div>
    </div>


    <fieldset class="form-group row">
    <legend class="col-form-legend col-sm-2">Choose Account Type</legend>
    <div class="col-sm-10">
      <div class="form-check">
        <%= f.radio_button :type, 'BankAccount', class: "form-check-input"%>
        <%= f.label :type, class: "form-check-label", value: 'Bank' %>
      </div>
      <div class="form-check">
        <%= f.radio_button :type, 'CreditAccount', class: "form-check-input"%>
        <%= f.label :type, class: "form-check-label", value: 'Credit' %>
      </div>
      <div class="form-check">
        <%= f.radio_button :type, 'LoanAccount', class: "form-check-input"%>
        <%= f.label :type, class: "form-check-label", value: 'Loan' %>
      </div>
    </div>
  </fieldset>


  <%= f.submit %>

<% end %>
